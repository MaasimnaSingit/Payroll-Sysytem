# Environment Variables for Vercel Deployment
# Copy this file to .env and fill in your values

# JWT Secret for authentication (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-here

# Database path (for local development)
DB_PATH=./payroll_system.db

# Node environment
NODE_ENV=production

# Server port (Vercel will handle this automatically)
PORT=8080

# CORS settings
CORS_ORIGIN=https://your-domain.vercel.app

# Admin credentials (for initial setup)
ADMIN_USERNAME=Tgpspayroll
ADMIN_PASSWORD=Tgpspayroll16**

# Database settings
DB_ENCRYPTION_KEY=your-database-encryption-key-here
