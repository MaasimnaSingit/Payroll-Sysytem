{
  "name": "payroll-attendance-system",
  "private": true,
  "version": "1.0.0",
  "description": "Automated Payroll & Attendance System - Electron + React + Vite",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "start": "node server/index.js",
    "build": "vite build",
    "build:server": "echo 'Server build complete'",
    "vercel-build": "npm run build && npm run build:server",
    "serve": "node server/start.js",
    "seed-admin": "node server/cli/seedAdmin.js",
    "preview": "node scripts/kill-other-processes.js && node scripts/dev-startup.js",
    "clean:src:dry": "node scripts/cleanup.mjs",
    "clean:src": "node scripts/cleanup.mjs --apply",
    "clean:web:dry": "node scripts/cleanup.mjs --src=web/src",
    "clean:web": "node scripts/cleanup.mjs --src=web/src --apply",
    "electron": "electron .",
    "vite-dev": "vite --port 0",
    "electron-pack": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "clean": "rimraf dist release node_modules/.cache .vite-port",
    "reset": "npm run clean && npm install",
    "kill-ports": "taskkill /f /im node.exe 2>nul || echo No Node processes found",
    "force-kill": "taskkill /f /im node.exe /im electron.exe 2>nul || echo No processes found",
    "test": "node scripts/run-tests.js",
    "server": "cd server && node index.js",
    "client": "vite"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dayjs": "^1.11.11",
    "docx": "^9.0.3",
    "docxtemplater": "^3.40.2",
    "dotenv": "^17.2.2",
    "electron-store": "^8.1.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.542.0",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "pdfkit": "^0.17.2",
    "pizzip": "^3.1.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.1",
    "recharts": "^3.1.2",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "electron": "^23.0.0",
    "electron-builder": "^24.0.0",
    "mocha": "^11.7.2",
    "postcss": "^8.4.21",
    "rimraf": "^5.0.10",
    "tailwindcss": "^3.2.7",
    "vite": "^4.1.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.payroll.attendance.system",
    "productName": "Payroll & Attendance System",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}